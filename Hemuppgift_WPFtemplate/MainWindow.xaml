<Window x:Class="Hemuppgift_WPFtemplate.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hemuppgift_WPFtemplate"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Button x:Name="Grid"
            Content="Grid"
            FontSize="25"
            Grid.Column="0"
            Grid.Row="0"
            Click="Grid_Click"/>

        <Button x:Name="StackPanel"
            Content="StackPanel"
            FontSize="25"
            Grid.Column="1"
            Grid.Row="0"
            Click="StackPanel_Click"/>

        <Button x:Name="WrapPanel"
            Content="WrapPanel"
            FontSize="25"
            Grid.Column="0"
            Grid.Row="1"
            Click="WrapPanel_Click"/>

        <Button x:Name="DockPanel"
            Content="DockPanel"
            FontSize="25"
            Grid.Column="1"
            Grid.Row="1"
            Click="DockPanel_Click"/>

    </Grid>

</Window>
